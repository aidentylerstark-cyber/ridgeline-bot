{
  "name": "ridgeline-bot",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "esbuild src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist && esbuild src/db/migrate-runner.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/migrate.js",
    "migrate": "node dist/migrate.js",
    "start": "node dist/index.js",
    "check": "tsc"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@discordjs/builders": "^1.13.1",
    "discord-html-transcripts": "^3.2.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "node-cron": "^3.0.3",
    "pg": "^8.18.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "20.16.11",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.16.0",
    "esbuild": "^0.25.0",
    "tsx": "^4.20.5",
    "typescript": "5.6.3"
  }
}
